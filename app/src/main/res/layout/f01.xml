<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.gansunwenlian_v01.myview.MyGridView
                android:id="@+id/gv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:numColumns="4"></com.example.gansunwenlian_v01.myview.MyGridView>

            <com.example.gansunwenlian_v01.myview.MyListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"></com.example.gansunwenlian_v01.myview.MyListView>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
